<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sonata.admin.propel.filter.type.string" class="Sonata\PropelAdminBundle\Filter\StringFilter">
            <tag name="sonata.admin.filter.type" alias="string" />
            <tag name="sonata.admin.filter.type" alias="varchar" />
            <tag name="sonata.admin.filter.type" alias="longvarchar" />
            <tag name="sonata.admin.filter.type" alias="text" />
        </service>
        <service id="sonata.admin.propel.filter.type.number" class="Sonata\PropelAdminBundle\Filter\NumberFilter">
            <tag name="sonata.admin.filter.type" alias="number" />
            <tag name="sonata.admin.filter.type" alias="integer" />
        </service>
        <service id="sonata.admin.propel.filter.type.model" class="Sonata\PropelAdminBundle\Filter\ModelFilter">
            <tag name="sonata.admin.filter.type" alias="model" />
        </service>
        <service id="sonata.admin.propel.filter.type.boolean" class="Sonata\PropelAdminBundle\Filter\BooleanFilter">
            <tag name="sonata.admin.filter.type" alias="checkbox" />
            <tag name="sonata.admin.filter.type" alias="boolean" />
        </service>
        <service id="sonata.admin.propel.filter.type.date" class="Sonata\PropelAdminBundle\Filter\DateFilter">
            <tag name="sonata.admin.filter.type" alias="date" />
        </service>
        <service id="sonata.admin.orm.filter.type.date_range" class="Sonata\PropelAdminBundle\Filter\DateRangeFilter">
            <tag name="sonata.admin.filter.type" alias="date_range" />
        </service>
        <service id="sonata.admin.orm.filter.type.datetime" class="Sonata\PropelAdminBundle\Filter\DateTimeFilter">
            <tag name="sonata.admin.filter.type" alias="datetime" />
        </service>
        <service id="sonata.admin.orm.filter.type.datetime_range" class="Sonata\PropelAdminBundle\Filter\DateTimeRangeFilter">
            <tag name="sonata.admin.filter.type" alias="datetime_range" />
        </service>
    </services>

</container>
